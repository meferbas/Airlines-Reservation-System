@model FlightCreateViewModel

@section Styles {
  <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="auth-card">
        <div class="card-header bg-navy text-white">
          <h2 class="text-center mb-0">Edit Flight</h2>
        </div>
        <div class="card-body">
          <form action="Edit" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="FlightId">

            <div class="row g-3">
              <!-- From -->
              <div class="col-md-6">
                <label asp-for="From" class="form-label">From</label>
                <select class="form-select" asp-for="From" name="From">
                  <option value="Ankara">Ankara</option>
                  <option value="Istanbul">Istanbul</option>
                  <option value="Denizli">Denizli</option>
                  <option value="Kırşehir">Kırşehir</option>
                </select>
                <span asp-validation-for="From" class="text-danger"></span>
              </div>

              <!-- To -->
              <div class="col-md-6">
                <label asp-for="To" class="form-label">To</label>
                <select class="form-select" asp-for="To" name="To">
                  <option value="Ankara">Ankara</option>
                  <option value="Istanbul">Istanbul</option>
                  <option value="Denizli">Denizli</option>
                  <option value="Kırşehir">Kırşehir</option>
                </select>
                <span asp-validation-for="To" class="text-danger"></span>
              </div>

              <!-- Depart -->
              <div class="col-md-6">
                <label asp-for="Depart" class="form-label">Depart Date</label>
                <input type="date" asp-for="Depart" class="form-control" />
                <span asp-validation-for="Depart" class="text-danger"></span>
              </div>

              <!-- Return -->
              <div class="col-md-6">
                <label asp-for="Return" class="form-label">Return Date</label>
                <input type="date" asp-for="Return" class="form-control" />
                <span asp-validation-for="Return" class="text-danger"></span>
              </div>

              <!-- Time -->
              <div class="col-md-6">
                <label asp-for="Time" class="form-label">Departure Time</label>
                <input type="time" asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
              </div>

              <!-- Guest -->
              <div class="col-md-6">
                <label asp-for="Guest" class="form-label">Passenger Type</label>
                <select class="form-select" asp-for="Guest">
                  <option value="Adult">Adult</option>
                  <option value="Child(2-12 age)">Child (2-12 age)</option>
                  <option value="Infant(0-2 age)">Infant (0-2 age)</option>
                </select>
                <span asp-validation-for="Guest" class="text-danger"></span>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid gap-2 mt-4">
              <button type="submit" class="btn btn-modern btn-lg">
                <i class="fas fa-edit me-2"></i>Update Flight
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>