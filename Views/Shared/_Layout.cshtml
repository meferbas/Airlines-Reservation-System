﻿<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - AirlineSeatReservationSystem</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  <link rel="stylesheet" href="~/AirlineSeatReservationSystem.styles.css" asp-append-version="true" />
</head>

<body>

  <header>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm" style="background-color: #e3f2fd;">

      <div class="container-fluid">
        <a class="navbar-brand" asp-controller="Flight" asp-action="Index">Airlines Website</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01"
          aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav ms-auto">
            @if (User.Identity!.IsAuthenticated)



            {
              @if (User.IsInRole("admin"))



              {
                <li class="nav-item">
                  <a class="nav-link" asp-controller="Flight" asp-action="ListFlights">Admin</a>

                </li>
                <!-- <li class="nav-item">
                    <a class="nav-link  " asp-controller="Flight" asp-action="Index">Home</a>

                  </li> -->
                <li class="nav-item">
                  <a href="" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                  <a href="/users/logout" class="nav-link">Logout</a>
                </li>
              }



              else



              {

                <li class="nav-item">
                  <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">Flights</a>

                </li>
                <li class="nav-item">
                  <a href="" class="nav-link">@User.Identity.Name</a>
                </li>
                <li class="nav-item">
                  <a href="/users/logout" class="nav-link">Logout</a>
                </li>
              }


            }



            else



            {
              <li class="nav-item">
                <a class="nav-link" asp-controller="Flight" asp-action="Index">Home</a>

              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="SignUp">Sign up</a>

              </li>
              <li class="nav-item">
                <a class="nav-link" asp-controller="Users" asp-action="SignIn">Sign In</a>

              </li>
            }

            <li class="nav-item">
              <div class="dropdown">
                  <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">Çeviri</button>
                  <ul class="dropdown-menu">
                    <li>
                      <a asp-controller="Flight" asp-action="ChangeLanguage" asp-route-culture="en-US" class="dropdown-item"> <i class="flag-icon flag-icon-gb"></i>
                        English
                      </a>
                    </li>
                     <li>
                      <a asp-controller="Flight" asp-action="ChangeLanguage" asp-route-culture="tr-TR" class="dropdown-item"> <i class="flag-icon flag-icon-gb"></i>
                        Türkçe
                      </a>
                    </li>
                  </ul>
              </div>
            </li>
          </ul>
        </div>

      </div>
      </div>
    </nav>
  </header>

  <div class="container">
    <main role="main" class="pb-3">@RenderBody()</main>
  </div>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>