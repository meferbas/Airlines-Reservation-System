<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirlineSeatReservationSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link
      rel="stylesheet"
      href="~/AirlineSeatReservationSystem.styles.css"
      asp-append-version="true"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container">
          <ul class="navbar-nav ms-auto">
            @if(User.Identity!.IsAuthenticated) {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Flight" asp-action="Create"
                >Routes</a >
             
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Flight" asp-action="Index"
                >Home</a>
              
            </li>
            <li class="nav-item">
              <a href="" class="nav-link">@User.Identity.Name</a>
            </li>
            <li class="nav-item">
              <a href="/users/logout" class="nav-link">Logout</a>
            </li>
            }else {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Flight" asp-action="Index"
                >Home</a>
              
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Users" asp-action="SignUp"
                >Sign up</a>
              
            </li>
            <li class="nav-item">
              <a class="nav-link" asp-controller="Users" asp-action="SignIn"
                >Sign In</a>
              
            </li>
            }

            <li class="nav-item">
              <select class="form-select" aria-label="Default select example">
                <option selected value="" value="1">
                  <a
                    class="nav-link"
                    language="english"
                    asp-controller="Home"
                    asp-action="Privacy"
                    >TR</a>
                  
                </option>
                <option value="2">
                  <a
                    class="nav-link"
                    language="english"
                    asp-controller="Home"
                    asp-action="Privacy"
                    >EN</a>
                  
                </option>
                <option value="3">
                  <a
                    class="nav-link"
                    language="english"
                    asp-controller="Home"
                    asp-action="Privacy"
                    >FR</a>
                  
                </option>
              </select>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container">
      <main role="main" class="pb-3">@RenderBody()</main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
