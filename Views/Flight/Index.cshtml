@model FlightViewModel

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["SuccessMessage"] != null)

{
  <div class="alert alert-success">
    @TempData["SuccessMessage"]
  </div>
}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" /> 
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
  <title>Ana Sayfa</title>
</head>
<body>
  <div class="container-fluid hero-section d-flex align-items-center justify-content-center" style="min-height: 80vh; background-image: url('/img/hero-bg.jpg'); background-size: cover; background-position: center;">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="search-container">
            <form action="/Flight/SearchFlights" method="post">
              <!-- Radio Buttons -->
              <div class="row mb-4">
                <input type="hidden" id="IsOneWay" name="IsOneWay" value="false" />
                <div class="col-auto form-check me-4">
                  <input type="radio" class="form-check-input" name="flexRadioDefault" id="flexRadioDefault1" onclick="toggleReturnDate(false)" checked />
                  <label for="flexRadioDefault1" class="form-check-label">@_localization.Getkey("Round Trip").Value</label>
                </div>
                <div class="col-auto form-check">
                  <input type="radio" class="form-check-input" name="flexRadioDefault" id="flexRadioDefault2" onclick="toggleReturnDate(true)" />
                  <label for="flexRadioDefault2" class="form-check-label">@_localization.Getkey("One Way").Value</label>
                </div>
              </div>

              <div class="row g-3 align-items-end">
                <!-- From -->
                <div class="col-md-3">
                  <label asp-for="From" class="form-label">@_localization.Getkey("From").Value</label>
                  <select class="form-select" asp-for="From" name="From" id="from">
                    <option value="Ankara">Ankara</option>
                    <option value="Istanbul">Istanbul</option>
                    <option value="Denizli">Denizli</option>
                    <option value="Kırşehir">Kırşehir</option>
                  </select>
                </div>

                <!-- Swap Button -->
                <div class="col-md-1 text-center">
                  <button type="button" class="btn btn-outline-light rounded-circle" id="swapButton" onclick="swapValues(event)">
                    <i class="fa-solid fa-arrow-right-arrow-left"></i>
                  </button>
                </div>

                <!-- To -->
                <div class="col-md-3">
                  <label asp-for="To" class="form-label">@_localization.Getkey("To").Value</label>
                  <select class="form-select" asp-for="To" name="To" id="to">
                    <option value="Ankara">Ankara</option>
                    <option value="Istanbul">Istanbul</option>
                    <option value="Denizli">Denizli</option>
                    <option value="Kırşehir">Kırşehir</option>
                  </select>
                </div>

                <!-- Depart -->
                <div class="col-md-2">
                  <label asp-for="Depart" class="form-label">@_localization.Getkey("Depart").Value</label>
                  <input type="date" name="Depart" id="deparDate" class="form-control" asp-for="Depart" />
                </div>

                <!-- Return -->
                <div class="col-md-2">
                  <label asp-for="Return" class="form-label">@_localization.Getkey("Return").Value</label>
                  <input type="date" name="Return" id="returnDate" class="form-control" asp-for="Return" />
                </div>

                <!-- Guest -->
                <div class="col-md-12 mt-3">
                  <label asp-for="Guest" class="form-label">@_localization.Getkey("Guest").Value</label>
                  <select class="form-select" name="Guest" asp-for="Guest">
                    <option value="Adult">@_localization.Getkey("Adult").Value</option>
                    <option value="Child(2-12 age)">@_localization.Getkey("Child").Value (2-12)</option>
                    <option value="Infant(0-2 age)">@_localization.Getkey("Infant").Value (0-2)</option>
                  </select>
                </div>

                <!-- Search Button -->
                <div class="col-12 mt-4 text-end">
                  <button type="submit" class="btn btn-primary btn-lg px-5">
                    @_localization.Getkey("Search Flights").Value
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function swapValues(event) {
      event.preventDefault();
   // Formun gönderilmesini engelle
  var from = document.getElementById("from").value;
  var to = document.getElementById("to").value;
  

  document.getElementById("from").value = to;
  document.getElementById("to").value = from;
}


    // Return tarih seçiminin devre dışı bırakılmasını veya etkinleştirilmesini kontrol eden fonksiyon
    function toggleReturnDate(isOneWay) {
  var returnDateInput = document.getElementById('returnDate');
  var isOneWayInput = document.getElementById('IsOneWay');

  // Return tarihini devre dışı bırak veya etkinleştir
  returnDateInput.disabled = isOneWay;

  // Hidden input alanını güncelle
  isOneWayInput.value = isOneWay.toString();

  // One Way seçiliyse Return tarihini temizle
  if (isOneWay) {
    returnDateInput.value = '';
  }
}

  </script> 

      

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
